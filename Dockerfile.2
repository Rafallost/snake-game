# Dockerfile.2 - builder
FROM golang:1.20-alpine
LABEL maintainer="Twoje Imię <email@domena>"

WORKDIR /app
RUN apk update && apk add --no-cache make

# Katalogi montowane z hosta
VOLUME ["/app/input", "/app/output"]

# Domyślny punkt wejścia: budowa kodu zamontowanego w /app/input
CMD ["sh", "-c", "cd /app/input && go build -v -o /app/output/snake 2>&1 | tee /app/output/build.log"]