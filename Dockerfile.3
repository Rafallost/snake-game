# Dockerfile.3 - tester
FROM golang:1.20-alpine
LABEL maintainer="Twoje ImiÄ™ <email@domena>"

WORKDIR /app
RUN apk update && apk add --no-cache git make

# Klonujemy kod
RUN git clone https://github.com/Rafallost/snake-game.git input

# Tworzymy output i volume
RUN mkdir -p /app/output
VOLUME ["/app/output"]

# Uruchamiamy testy i zapisujemy logi
CMD ["sh", "-c", "cd input && make test 2>&1 | tee /app/output/test.log"]