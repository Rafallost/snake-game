# Dockerfile.3 - tester
FROM golang:1.20-alpine
LABEL maintainer="Twoje Imię <email@domena>"

WORKDIR /app
RUN apk update && apk add --no-cache git make

# Montujemy input/output z buildera
VOLUME ["/app/input", "/app/output"]

# Domyślna komenda: uruchomienie testów i zapis logów
CMD ["sh", "-c", "cd input && make test 2>&1 | tee /app/output/test.log"]