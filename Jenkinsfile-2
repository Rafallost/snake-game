pipeline {
  agent any
  environment {
    COMPOSE_PROJECT_NAME = "snakeproject"
  }

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Build Images') {
      steps {
        sh 'docker-compose build'
      }
    }

    stage('Run Builder') {
      steps {
        sh '''
          docker-compose run --rm builder \
            > repo_output/build.log 2>&1
        '''
      }
    }

    stage('Run Tester') {
      steps {
        sh '''
          docker-compose run --rm tester \
            > repo_output/test.log 2>&1
        '''
      }
    }

    stage('Teardown') {
      steps {
        sh 'docker-compose down'
      }
    }

    stage('Archive Logs') {
      steps {
        archiveArtifacts artifacts: 'repo_output/*.log', fingerprint: true
      }
    }
  }

  post {
    always {
      echo "Pipeline zakończony – logi dostępne jako artefakty"
    }
  }
}