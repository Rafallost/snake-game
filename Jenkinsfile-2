pipeline {
  agent any
  environment {
    COMPOSE_PROJECT_NAME = "snakeproject"
  }

  stages {
    stage('Init') {
      steps {
        sh 'mkdir -p repo_input repo_output'
      }
    }

    stage('Checkout') {
      steps {
        // Pobieramy repo do podkatalogu repo_input
        checkout([
          $class: 'GitSCM',
          branches: [[name: '*/master']],
          userRemoteConfigs: [[url: 'https://github.com/Rafallost/snake-game.git']],
          extensions: [[$class: 'RelativeTargetDirectory', relativeTargetDir: 'repo_input']]
        ])
      }
    }

    stage('Build Images') {
      steps {
        sh 'docker-compose build'
      }
    }

    stage('Run Builder') {
      steps {
        sh 'docker-compose run --rm builder'
      }
    }

    stage('Run Tester') {
      steps {
        sh 'docker-compose run --rm tester'
      }
    }

    stage('Teardown') {
      steps {
        sh 'docker-compose down'
      }
    }

    stage('Archive Logs') {
      steps {
        archiveArtifacts artifacts: 'repo_output/*.log', fingerprint: true
      }
    }
  }

  post {
    always {
      echo "Pipeline zakończony – logi dostępne jako artefakty"
    }
  }
}