pipeline {
  agent any
  stages {
    stage('Build Dependencies Image') {
      steps {
        dir('docker/dependencies') {
          // build the "builder" image WITH Go
          sh 'docker build -t local-dependencies:1.0 .'
        }
      }
    }

    stage('Compile') {
      // now use that freshly-built image
      agent {
        docker {
          image 'local-dependencies:1.0'
          args  args  '--privileged -u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      steps {
        echo "=== BUILD START ==="
        sh 'make build'
      }
    }

    stage('Build Docker Image') {
      agent {
        docker {
          image 'docker:24.0.2-cli'
          args  args  '--privileged -u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      steps {
        echo "Buduję obraz aplikacji w DIND"
        sh 'docker build -t snake-game:${BUILD_NUMBER} .'
      }
    }

    stage('Test') {
      agent {
        docker {
          image 'snake-game:${BUILD_NUMBER}'
        }
      }
      steps {
        echo "=== TEST START ==="
        sh '''
          mkdir -p output
          go test ./snake/... > output/test_log.log 2>&1 || true
          cat output/test_log.log
        '''
        echo "=== TEST END ==="
      }
    }

    stage('Archive Logs') {
      agent any
      steps {
        archiveArtifacts artifacts: 'output/*.log', fingerprint: true
      }
    }
  }

  post {
    always {
      echo "Pipeline zakończone. Logi dostępne jako artefakty."
    }
  }
}
