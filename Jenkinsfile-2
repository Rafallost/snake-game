pipeline {
  agent any
  environment {
    DOCKER_HOST        = 'tcp://dind:2375'
    DOCKER_TLS_CERTDIR = ''
  }
  stages {
    stage('Build deps image') {
      steps {
        dir('docker/dependencies') {
          sh 'docker build -t rafal206/dependencies:1.0 .'
        }
      }
    }

    stage('Compile & Test') {
      agent {
        docker {
          image 'rafal206/dependencies:1.0'
          args  '--privileged -u root -v /var/run/docker.sock:/var/run/docker.sock'
        }
      }
      steps {
        // zakładamy, że Makefile w głównym katalogu robi build + testy
        sh 'make build'
        sh 'go test ./snake/... > test.log'
        archiveArtifacts artifacts: 'test.log', fingerprint: true
      }
    }

  post {
    always {
      echo "Koniec pipeline, artefakty i obraz dostępne"
    }
  }
}
