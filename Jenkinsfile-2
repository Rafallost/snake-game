pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        checkout scm
      }
    }

    stage('Prepare') {
      steps {
        sh 'mkdir -p repo_output'
      }
    }

    stage('Build Images') {
      steps {
        sh 'docker-compose build'
      }
    }

    stage('Run Builder') {
      steps {
        // logi zapisywane do repo_output/build.log
        sh 'docker-compose run --rm builder'
      }
    }

    stage('Run Tester') {
      steps {
        // logi zapisywane do repo_output/test.log
        sh 'docker-compose run --rm tester'
      }
    }

    stage('Teardown') {
      steps {
        sh 'docker-compose down'
      }
    }

    stage('Archive Logs') {
      steps {
        archiveArtifacts artifacts: 'repo_output/*.log', fingerprint: true
      }
    }
  }

  post {
    always {
      echo "Pipeline done, artifacts: repo_output/*.log"
    }
  }
}